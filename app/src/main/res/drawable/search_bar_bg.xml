<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 背景色（ここはお好みで） -->
    <solid android:color="#F5F5F5" />

    <!-- 角丸 -->
    <corners android:radius="24dp" />

    <!-- 余白や枠線 -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />
    <padding
        android:left="12dp"
        android:right="12dp"
        android:top="8dp"
        android:bottom="8dp" />

</shape>
